<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dialog_margin_size"
    android:paddingRight="@dimen/dialog_margin_size"
    android:paddingTop="@dimen/dialog_margin_size"
    android:id="@+id/feedback_dialog_layout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="@dimen/dialog_text_size"
        android:text="@string/feedback_dialog_message"
        android:textColor="@color/textSecondaryLightBackground"
        android:layout_marginBottom="5dp"
        android:id="@+id/feedback_dialog_description_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/feedback_dialog_mail_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/dialog_text_size"
            android:text="@string/feedback_dialog_mail"
            android:textColor="@color/textSecondaryLightBackground"
            android:layout_margin="5dp"
            android:id="@+id/feedback_dialog_mail_text"
            />
    </LinearLayout>
</LinearLayout>