<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_activity_geolocalization_methods_fragment_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:id="@+id/intro_activity_geolocalization_methods_fragment_inner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <paweltypiak.weatherial.customViews.RobotoMediumFontTextView
            android:id="@+id/intro_activity_geolocalization_methods_fragment_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/intro_activity_fragment_header_bottom_margin"
            android:textSize="@dimen/intro_activity_fragment_header_text_size"
            android:text="@string/first_launch_geolocalization_header"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            />
        <RadioGroup
            android:id="@+id/intro_activity_geolocalization_methods_fragment_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/intro_activity_geolocalization_methods_fragment_gps_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/intro_activity_fragment_radio_button_bottom_margin"
                app:buttonTint="@color/white"
                android:text="@string/geolocalization_method_gps"
                android:textSize="@dimen/intro_activity_fragment_text_size"
                android:textColor="@color/white"
                />
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/intro_activity_geolocalization_methods_fragment_network_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geolocalization_method_network"
                android:textSize="@dimen/intro_activity_fragment_text_size"
                android:textColor="@color/white"
                app:buttonTint="@color/white"
                />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
