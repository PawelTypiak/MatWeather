<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/first_loading_dialog_layout"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/first_loading_dialog_icon_layout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="30dp"
            android:src="@drawable/main_icon"
            android:id="@+id/first_loading_dialog_app_icon_about_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="MatWeather"
            android:textColor="@color/white"
            android:id="@+id/first_loading_dialog_app_name_about_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_gravity="center"
        android:id="@+id/first_loading_dialog_content_layout"
        >
        <ProgressBar
            android:indeterminate="true"
            style="?android:attr/progressBarStyle"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24dp"
            android:theme="@style/AppTheme.White"
            android:id="@+id/first_loading_dialog_progress_circle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/first_loading_dialog_message"
            android:textColor="@color/textPrimaryLight"
            android:id="@+id/first_loading_dialog_message"
            />
    </LinearLayout>

</LinearLayout>