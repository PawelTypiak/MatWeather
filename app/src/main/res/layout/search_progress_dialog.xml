<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_margin_size"
    android:id="@+id/localization_search_dialog_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/search_progress_dialog_content_layout"
        >
        <ProgressBar
            android:indeterminate="true"
            style="?android:attr/progressBarStyle"
            android:layout_height="48dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24dp"
            android:id="@+id/search_progress_dialog_progress_circle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/search_progress_dialog_message"
            android:textColor="@color/textSecondaryLightBackground"
            android:textSize="@dimen/dialog_text_size"
            android:id="@+id/search_progress_dialog_message"
            />
    </LinearLayout>
</LinearLayout>