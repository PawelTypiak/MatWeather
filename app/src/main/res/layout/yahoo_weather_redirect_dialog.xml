<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dialog_margin_size"
    android:paddingRight="@dimen/dialog_margin_size"
    android:paddingTop="@dimen/dialog_margin_size"
    android:id="@+id/yahoo_weather_redirect_dialog_layout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/dialog_text_size"
        android:text="@string/yahoo_weather_redirect_dialog_message"
        android:textColor="@color/textSecondaryLightBackground"
        android:id="@+id/yahoo_weather_redirect_dialog_description_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/dialog_text_size"
        android:text="@string/yahoo_weather_redirect_dialog_message_service_name"
        android:textColor="@color/textSecondaryLightBackground"
        android:layout_marginTop="10dp"
        android:id="@+id/yahoo_weather_redirect_dialog_description_service_name_text"
        />
</LinearLayout>