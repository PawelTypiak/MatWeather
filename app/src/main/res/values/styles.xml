<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MainActivityTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="IntroActivityTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="SettingsActivityTheme.base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="SettingsActivityTheme" parent="SettingsActivityTheme.base"/>
    <style name="ActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="AppTheme.White">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="CheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondaryLightBackground</item>
    </style>
    <style name="TextAppearance.CollapsedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_collapsed_title_text_size</item>
        <item name="android:textColor">@color/textPrimaryDarkBackground</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextAppearance.ExpandedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_expanded_title_text_size</item>
        <item name="android:textColor">@color/textPrimaryDarkBackground</item>
    </style>
    <style name="EditTextStyle">
        <item name="colorControlNormal">@color/transparent</item>
    </style>
    <style name="SpinnerStyle" parent="MainActivityTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_effect_black</item>
    </style>
</resources>